@page
@model RoomEase.Pages.Admin.Rooms.DetailsModel
@{
    ViewData["Title"] = "Détails de la Salle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Nom</dt>
                        <dd class="col-sm-9">@Model.Room.Name</dd>

                        <dt class="col-sm-3">Capacité</dt>
                        <dd class="col-sm-9">@Model.Room.Capacity personnes</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@(Model.Room.Description ?? "Aucune description")</dd>

                        <dt class="col-sm-3">Disponible</dt>
                        <dd class="col-sm-9">
                            @if (Model.Room.IsAvailable)
                            {
                                <span class="badge bg-success">Oui</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Non</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Équipements</dt>
                        <dd class="col-sm-9">
                            @if (Model.Room.RoomEquipments != null && Model.Room.RoomEquipments.Any())
                            {
                                <ul class="list-unstyled">
                                    @foreach (var re in Model.Room.RoomEquipments)
                                    {
                                        <li><i class="bi bi-check-circle text-success"></i> @re.Equipment.Name</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <span class="text-muted">Aucun équipement</span>
                            }
                        </dd>
                    </dl>

                    <div class="d-flex justify-content-between">
                        <a asp-page="Index" class="btn btn-secondary">Retour à la liste</a>
                        <div>
                            <a asp-page="Edit" asp-route-id="@Model.Room.Id" class="btn btn-warning">Modifier</a>
                            <a asp-page="Delete" asp-route-id="@Model.Room.Id" class="btn btn-danger">Supprimer</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
