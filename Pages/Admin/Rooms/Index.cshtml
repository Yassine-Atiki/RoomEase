@page
@model RoomEase.Pages.Admin.Rooms.IndexModel
@{
    ViewData["Title"] = "Gestion des Salles";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouvelle Salle
        </a>
    </div>

    @if (Model.Rooms.Count == 0)
    {
        <div class="alert alert-info">
            <p class="mb-0">Aucune salle n'est disponible. Créez-en une pour commencer.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Nom</th>
                        <th>Capacité</th>
                        <th>Description</th>
                        <th>Équipements</th>
                        <th>Disponible</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var room in Model.Rooms)
                    {
                        <tr>
                            <td>@room.Name</td>
                            <td>@room.Capacity personnes</td>
                            <td>@(room.Description ?? "N/A")</td>
                            <td>
                                @if (room.RoomEquipments != null && room.RoomEquipments.Any())
                                {
                                    <span class="badge bg-secondary">@room.RoomEquipments.Count équipements</span>
                                }
                                else
                                {
                                    <span class="text-muted">Aucun</span>
                                }
                            </td>
                            <td>
                                @if (room.IsAvailable)
                                {
                                    <span class="badge bg-success">Oui</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Non</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-page="Details" asp-route-id="@room.Id" class="btn btn-sm btn-info">Détails</a>
                                    <a asp-page="Edit" asp-route-id="@room.Id" class="btn btn-sm btn-warning">Modifier</a>
                                    <a asp-page="Delete" asp-route-id="@room.Id" class="btn btn-sm btn-danger">Supprimer</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
