@page
@model RoomEase.Pages.Admin.Reservations.IndexModel
@{
    ViewData["Title"] = "Gestion des Réservations";
}

<div class="container mt-4">
    <h1><i class="bi bi-calendar-check"></i> @ViewData["Title"]</h1>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="statusFilter" class="form-label">Filtrer par statut</label>
                    <select asp-for="StatusFilter" class="form-select" id="statusFilter" onchange="this.form.submit()">
                        <option value="">Tous les statuts</option>
                        <option value="Pending">En attente</option>
                        <option value="Approved">Approuvées</option>
                        <option value="Rejected">Refusées</option>
                        <option value="Cancelled">Annulées</option>
                    </select>
                </div>
                <div class="col-md-8 d-flex align-items-end">
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Réinitialiser
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center border-warning">
                <div class="card-body">
                    <h3 class="text-warning">@Model.AllReservations.Count(r => r.Status == RoomEase.Models.ReservationStatus.Pending)</h3>
                    <p class="mb-0">En attente</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-success">
                <div class="card-body">
                    <h3 class="text-success">@Model.AllReservations.Count(r => r.Status == RoomEase.Models.ReservationStatus.Approved)</h3>
                    <p class="mb-0">Approuvées</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-danger">
                <div class="card-body">
                    <h3 class="text-danger">@Model.AllReservations.Count(r => r.Status == RoomEase.Models.ReservationStatus.Rejected)</h3>
                    <p class="mb-0">Refusées</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-secondary">
                <div class="card-body">
                    <h3 class="text-secondary">@Model.AllReservations.Count(r => r.Status == RoomEase.Models.ReservationStatus.Cancelled)</h3>
                    <p class="mb-0">Annulées</p>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.AllReservations.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Aucune réservation trouvée.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Utilisateur</th>
                        <th>Salle</th>
                        <th>Date et Heure</th>
                        <th>Durée</th>
                        <th>Motif</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reservation in Model.AllReservations)
                    {
                        <tr>
                            <td>
                                <strong>@reservation.UserName</strong><br />
                                <small class="text-muted">@reservation.UserEmail</small>
                            </td>
                            <td>
                                <strong>@reservation.RoomName</strong><br />
                                <small class="text-muted">@reservation.RoomCapacity pers.</small>
                            </td>
                            <td>
                                <i class="bi bi-calendar"></i> @reservation.StartTime.ToString("dd/MM/yyyy")<br />
                                <i class="bi bi-clock"></i> @reservation.StartTime.ToString("HH:mm") - @reservation.EndTime.ToString("HH:mm")
                            </td>
                            <td>
                                @{
                                    var duration = reservation.EndTime - reservation.StartTime;
                                    var hours = (int)duration.TotalHours;
                                    var minutes = duration.Minutes;
                                }
                                @if (hours > 0)
                                {
                                    <span>@hours h</span>
                                }
                                @if (minutes > 0)
                                {
                                    <span>@minutes min</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(reservation.Purpose))
                                {
                                    if (reservation.Purpose.Length > 50)
                                    {
                                        <span title="@reservation.Purpose">@reservation.Purpose.Substring(0, 50)...</span>
                                    }
                                    else
                                    {
                                        @reservation.Purpose
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">Non spécifié</span>
                                }
                            </td>
                            <td>
                                <span class="badge bg-@reservation.StatusClass">
                                    @reservation.StatusText
                                </span>
                            </td>
                            <td>
                                @if (reservation.Status == RoomEase.Models.ReservationStatus.Pending)
                                {
                                    <div class="btn-group" role="group">
                                        <form method="post" asp-page-handler="Approve" asp-route-id="@reservation.Id" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-success" 
                                                    onclick="return confirm('Approuver cette réservation?');">
                                                <i class="bi bi-check-circle"></i> Approuver
                                            </button>
                                        </form>
                                        <form method="post" asp-page-handler="Reject" asp-route-id="@reservation.Id" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-danger" 
                                                    onclick="return confirm('Refuser cette réservation?');">
                                                <i class="bi bi-x-circle"></i> Refuser
                                            </button>
                                        </form>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">Aucune action</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
