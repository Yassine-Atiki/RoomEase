@page
@model RoomEase.Pages.Admin.Equipment.IndexModel
@{
    ViewData["Title"] = "Gestion des Équipements";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouvel Équipement
        </a>
    </div>

    @if (Model.Equipments.Count == 0)
    {
        <div class="alert alert-info">
            <p class="mb-0">Aucun équipement n'est disponible. Créez-en un pour commencer.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Nom</th>
                        <th>Utilisé dans</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var equipment in Model.Equipments)
                    {
                        <tr>
                            <td>@equipment.Name</td>
                            <td>
                                @if (equipment.RoomEquipments != null && equipment.RoomEquipments.Any())
                                {
                                    <span class="badge bg-info">@equipment.RoomEquipments.Count salle(s)</span>
                                }
                                else
                                {
                                    <span class="text-muted">Non utilisé</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-page="Edit" asp-route-id="@equipment.Id" class="btn btn-sm btn-warning">Modifier</a>
                                    <a asp-page="Delete" asp-route-id="@equipment.Id" class="btn btn-sm btn-danger">Supprimer</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
