@page
@model RoomEase.Pages.Rooms.IndexModel
@{
    ViewData["Title"] = "Rechercher une Salle";
}

<div class="container mt-4">
    <h1><i class="bi bi-search"></i> @ViewData["Title"]</h1>
    
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Critères de recherche</h5>
        </div>
        <div class="card-body">
            <form method="get">
                <div class="row">
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="SearchCriteria.Date" class="form-label"></label>
                            <input asp-for="SearchCriteria.Date" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="SearchCriteria.StartTime" class="form-label"></label>
                            <input asp-for="SearchCriteria.StartTime" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="SearchCriteria.EndTime" class="form-label"></label>
                            <input asp-for="SearchCriteria.EndTime" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="SearchCriteria.MinCapacity" class="form-label"></label>
                            <input asp-for="SearchCriteria.MinCapacity" class="form-control" type="number" min="1" />
                        </div>
                    </div>
                </div>

                @if (Model.AllEquipments.Any())
                {
                    <div class="mb-3">
                        <label class="form-label">Équipements requis</label>
                        <div class="row">
                            @foreach (var equipment in Model.AllEquipments)
                            {
                                <div class="col-md-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" 
                                               name="SearchCriteria.EquipmentIds" 
                                               value="@equipment.Id" 
                                               id="equipment_@equipment.Id"
                                               checked="@(Model.SearchCriteria.EquipmentIds?.Contains(equipment.Id) ?? false)" />
                                        <label class="form-check-label" for="equipment_@equipment.Id">
                                            @equipment.Name
                                        </label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Rechercher
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Réinitialiser
                    </a>
                </div>
            </form>
        </div>
    </div>

    <h3 class="mb-3">Salles disponibles (@Model.AvailableRooms.Count)</h3>

    @if (!Model.AvailableRooms.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Aucune salle ne correspond à vos critères de recherche.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var room in Model.AvailableRooms)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-door-open"></i> @room.Name</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                <strong><i class="bi bi-people"></i> Capacité:</strong> @room.Capacity personnes<br />
                                <strong><i class="bi bi-info-circle"></i> Description:</strong> @(room.Description ?? "Non spécifiée")
                            </p>

                            @if (room.RoomEquipments != null && room.RoomEquipments.Any())
                            {
                                <div class="mb-2">
                                    <strong><i class="bi bi-tools"></i> Équipements:</strong>
                                    <ul class="list-unstyled ms-3">
                                        @foreach (var re in room.RoomEquipments)
                                        {
                                            <li><i class="bi bi-check-circle text-success"></i> @re.Equipment.Name</li>
                                        }
                                    </ul>
                                </div>
                            }
                        </div>
                        <div class="card-footer">
                            <a asp-page="Reserve" 
                               asp-route-roomId="@room.Id"
                               asp-route-date="@Model.SearchCriteria.Date?.ToString("yyyy-MM-dd")"
                               asp-route-startTime="@Model.SearchCriteria.StartTime?.ToString(@"hh\:mm")"
                               asp-route-endTime="@Model.SearchCriteria.EndTime?.ToString(@"hh\:mm")"
                               class="btn btn-primary w-100">
                                <i class="bi bi-calendar-plus"></i> Réserver cette salle
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
