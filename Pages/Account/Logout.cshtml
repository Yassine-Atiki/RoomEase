@page
@model RoomEase.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Déconnexion";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <p>Vous êtes déconnecté.</p>
                    <a asp-page="/Index" class="btn btn-primary">Retour à l'accueil</a>
                </div>
            </div>
        </div>
    </div>
</div>
