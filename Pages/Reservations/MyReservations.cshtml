@page
@model RoomEase.Pages.Reservations.MyReservationsModel
@{
    ViewData["Title"] = "Mes Réservations";
}

<div class="container mt-4">
    <h1><i class="bi bi-calendar-check"></i> @ViewData["Title"]</h1>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="mb-3">
        <a asp-page="/Rooms/Index" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouvelle réservation
        </a>
    </div>

    @if (!Model.Reservations.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Vous n'avez aucune réservation pour le moment.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Salle</th>
                        <th>Date et Heure</th>
                        <th>Durée</th>
                        <th>Motif</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reservation in Model.Reservations)
                    {
                        <tr>
                            <td>
                                <strong>@reservation.RoomName</strong><br />
                                <small class="text-muted">Capacité: @reservation.RoomCapacity personnes</small>
                            </td>
                            <td>
                                <i class="bi bi-calendar"></i> @reservation.StartTime.ToString("dd/MM/yyyy")<br />
                                <i class="bi bi-clock"></i> @reservation.StartTime.ToString("HH:mm")
                            </td>
                            <td>
                                @{
                                    var duration = reservation.EndTime - reservation.StartTime;
                                    var hours = (int)duration.TotalHours;
                                    var minutes = duration.Minutes;
                                }
                                @if (hours > 0)
                                {
                                    <span>@hours h</span>
                                }
                                @if (minutes > 0)
                                {
                                    <span>@minutes min</span>
                                }
                            </td>
                            <td>@(reservation.Purpose ?? "Non spécifié")</td>
                            <td>
                                <span class="badge bg-@reservation.StatusClass">
                                    @reservation.StatusText
                                </span>
                            </td>
                            <td>
                                @if (reservation.Status == RoomEase.Models.ReservationStatus.Pending || 
                                     reservation.Status == RoomEase.Models.ReservationStatus.Approved)
                                {
                                    <form method="post" asp-page-handler="Cancel" asp-route-id="@reservation.Id" 
                                          onsubmit="return confirm('Êtes-vous sûr de vouloir annuler cette réservation?');"
                                          class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="bi bi-x-circle"></i> Annuler
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted">Aucune action</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <div class="row">
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5>@Model.Reservations.Count(r => r.Status == RoomEase.Models.ReservationStatus.Pending)</h5>
                            <p class="text-muted mb-0">En attente</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5>@Model.Reservations.Count(r => r.Status == RoomEase.Models.ReservationStatus.Approved)</h5>
                            <p class="text-muted mb-0">Approuvées</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5>@Model.Reservations.Count(r => r.Status == RoomEase.Models.ReservationStatus.Rejected)</h5>
                            <p class="text-muted mb-0">Refusées</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5>@Model.Reservations.Count(r => r.Status == RoomEase.Models.ReservationStatus.Cancelled)</h5>
                            <p class="text-muted mb-0">Annulées</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
